<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Add Post</h5>
          <% if(msg) {%>
          <span class="successmsg"> <%= msg %> </span>
          <% } %>
          <form class="form-signin" method="post" action="/users/<%= name.id%>/post">
            <div class="form-label-group">
              <input type="text" id="title" class="form-control input-title" name="title" placeholder="Title" required>
            </div>
            <div class="form-label-group">
              <textarea name="content" rows="10" class="form-control" cols="50" id="content" placeholder="Description"
                required></textarea>
            </div>
            <button class="btn btn-lg btn-block text-uppercase" id="addpost" type="submit">Add Post</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>