<!DOCTYPE html>
<html>
<head>
  <title>Add Post</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css" type="text/css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body>
  <div> <%- include('../nav.ejs') %> </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Add Post</h5>
            <% if(msg) {%>
              <span class="successmsg"> <%= msg %> </span>
            <% } %>
            <form class="form-signin" method="post" action="/post" >
              <div class="form-label-group">
                <input type="text" id="title" class="form-control input-title" name="title" placeholder="Title" required>
              </div>
              <div class="form-label-group">
                <textarea name="content" rows="10" class="form-control" cols="50" id="content" placeholder="Description" required></textarea>
              </div>
              <button class="btn btn-lg btn-block text-uppercase" id="addpost" type="submit">Add Post</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
